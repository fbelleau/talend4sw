<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    DATA_AUTO_PROPAGATE="false"
    SCHEMA_AUTO_PROPAGATE="true"
    STARTABLE="true"
	PARTITIONING="AUTO"
    >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Internet</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="PROPERTY" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1">
      <TABLE READONLY="true">
        <COLUMN NAME="ResponseContent" TYPE="id_String" READONLY="true" CUSTOM="true" />
      </TABLE>
    </PARAMETER>
    
    <PARAMETER NAME="URI" FIELD="TEXT" REQUIRED="true" NUM_ROW="5">
      <DEFAULT>"http://localhost:8080/"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="METHOD_CHOSED" FIELD="CLOSED_LIST" NUM_ROW="10">
      <ITEMS DEFAULT="POST">
        <ITEM NAME="POST" VALUE="POST"/>
        <ITEM NAME="GET" VALUE="GET"/>
      </ITEMS>
    </PARAMETER>
    <!-- 
    <PARAMETER NAME="SET_PARAMS_DIRECTLY" FIELD="TABLE" NB_LINES="1" NUM_ROW="15">
      <ITEMS>
        <ITEM NAME="PARAMS_NAME" />
        <ITEM NAME="PARAMS_VALUE"/>
      </ITEMS>
    </PARAMETER> 
    -->
    <PARAMETER NAME="POST_PARAMS_FROM_FILE" FIELD="FILE" SHOW_IF="METHOD_CHOSED == 'POST'" NUM_ROW="20">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="OUT_TO_FILE" FIELD="CHECK" REQUIRED="true" NUM_ROW="25">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="OUT_FILE_NAME" FIELD="FILE" SHOW_IF="OUT_TO_FILE == 'true'" NUM_ROW="25" >
      <DEFAULT/>
    </PARAMETER>
    
    <PARAMETER NAME="HEADERS" FIELD="TABLE" REQUIRED="false" NB_LINES="7" NUM_ROW="35">
      <ITEMS>
        <ITEM NAME="HEADER_NAME" />
        <ITEM NAME="HEADER_VALUE" />
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER NAME="NEED_AUTHENTICATION" FIELD="CHECK" NUM_ROW="40">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="USR" FIELD="TEXT" NUM_ROW="40" SHOW_IF="NEED_AUTHENTICATION == 'true'">
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="PWD" FIELD="TEXT" NUM_ROW="40" SHOW_IF="NEED_AUTHENTICATION == 'true'">
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS/>

</COMPONENT>